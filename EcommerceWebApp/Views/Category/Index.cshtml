} *@
<div class="container">
  <div class="row pt-4 pb-3">
      <div class="col-6">
          <h2 class="text-primary"> Categoria</h2>
      </div>
      <div class="col-6 text-end">
          <a asp-controller="Category" asp-action="Create" class="btn btn-primary"> <!-- aqui agregamos un botton para agregar una categoria-->
                Agregar una categoria  <i class="bi bi-plus-circle-fill"></i> <!--icon de + -->
          </a>
      </div>
  </div>
    <table class="table table-bordered table-striped">
        <!-- creamos una tabla con estilo de bosstarp-->   
        <thead>
            <tr>
                <th>
                    Nombre de Categoria
                </th>
                <th>
                    Orden de Visualización
                </th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model.OrderBy(x => x.DisplayOrder))
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.DisplayOrder</td>
                    <td>
                        <!--   este es el listado de categoria y se agrega su boton de editar -->
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i> Editar
                            </a>
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash3"></i> Eliminar
                            </a>
                        </div>
                    </td>
                </tr>

            }
        </tbody>
    </table>
</div>